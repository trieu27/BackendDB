<h3>{{viewTitle}}</h3>

<form action="/event" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{event._id}}">
    <div class="form-group">
        <label>Tên sự kiện :</label>
        <input type="text" class="form-control" name="Name" placeholder="Nhập tên" value="{{event.Name}}">
        <div class="text-danger">
            {{event.NameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Thông Tin :</label>
        <input type="text" class="form-control" name="Info" placeholder="Nhập thông tin" value="{{event.Info}}">
        <div class="text-danger">
            {{event.InfoError}}
        </div>
    </div>
    <div class="form-group">
        <label>Loại :</label>
        <select class="form-control" name="Loai">
            {{#each eventType}}
            <option>{{this.maLoai}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label>Đường dẫn ảnh :</label>
        <input type="text" class="form-control" name="img_url" placeholder="Nhập đường dẫn" value="{{event.img_url}}">
    </div>
    <div class="form-group">
        <label>Mô tả :</label>
        <input type="text" class="form-control" name="detail" placeholder="Nhập mô tả" value="{{event.detail}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Xác nhận</button>
        <a class="btn btn-success" href="/event/list"><i class="fa fa-list-alt"></i> Xem toàn bộ</a>
        <a class="btn btn-primary" href="/dashboard">Trở về</a>
    </div>
</form>