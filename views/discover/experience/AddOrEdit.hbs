<h3>{{viewTitle}}</h3>

<form action="/experience" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{experience._id}}">
    <div class="form-group">
        <label>Tên trải nghiệm :</label>
        <input type="text" class="form-control" name="Name" placeholder="Nhập tên" value="{{experience.Name}}">
        <div class="text-danger">
            {{experience.NameError}}
        </div>
    </div>
    <div class="form-group">
        <label>Thông Tin :</label>
        <input type="text" class="form-control" name="Info" placeholder="Nhập thông tin" value="{{experience.Info}}">
        <div class="text-danger">
            {{experience.InfoError}}
        </div>
    </div>
    <div class="form-group">
        <label>Loại :</label>
        <select class="form-control" name="Loai">
            {{#each experienceType}}
            <option>{{this.maLoai}}</option>
            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label>Đường dẫn ảnh :</label>
        <input type="text" class="form-control" name="img_url" placeholder="Nhập đường dẫn"
            value="{{experience.img_url}}">
    </div>
    <div class="form-group">
        <label>Mô tả :</label>
        <input type="text" class="form-control" name="detail" placeholder="Nhập mô tả" value="{{experience.detail}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"> Xác nhận</button>
        <a class="btn btn-success" href="/experience/list"><i class="fa fa-list-alt"></i> Xem toàn bộ</a>
        <a class="btn btn-primary" href="/dashboard">Trở về</a>
    </div>
</form>